#!/usr/bin/env ruby
# git-boot

# 2011.02.05
# 0.5.1

require 'fileutils'
require 'ImpURI'
require 'net/ssh/shell'

def path_to_repository_with_extension(iuri)
  iuri.path =~ /\.git$/ ? iuri.path : iuri.path + '.git'
end

def create_local_repo
  system "git init" unless File.exist?('.git')
  if !Dir['*'].empty?
    system "git add ."
    system "git commit -m '+ *'"
  else
    FileUtils.touch('.gitignore')
    system "git add .gitignore"
    system "git commit -m '+ .gitignore'"
  end
end

def create_remote_repo(iuri)
  Net::SSH.start(iuri.host, iuri.username, :password => iuri.password) do |ssh|
    ssh.shell do |sh|
      sh.execute "mkdir #{path_to_repository_with_extension(iuri)}"
      sh.execute "cd #{path_to_repository_with_extension(iuri)}"
      sh.execute "git --bare init"
      sh.execute "exit"
    end
  end
end

def push_to_remote_repo(iuri)
  ssh_style_uri = "#{iuri.username}@#{iuri.hostname}:#{iuri.path}"
  system "git remote add origin #{ssh_style_uri}"
  system "git push origin master"
end

def main
  iuri = ImpURI.new(ARGV[0])
  create_local_repo
  if iuri
    create_remote_repo(iuri)
    push_to_remote_repo(iuri)
  end
end

main
